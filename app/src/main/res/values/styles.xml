<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomToolBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textViewInMenu" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#282828</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_in_menu</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginEnd" >10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CustomTextView" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_in_menu</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextInRoomsList" parent="Base.Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
    </style>


</resources>
