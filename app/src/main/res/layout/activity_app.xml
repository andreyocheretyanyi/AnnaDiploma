<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="ua.com.anna.borodina.annadiploma.views.AppActivity">

  <LinearLayout
    android:orientation="vertical"
    android:id="@+id/root_without_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
      android:contentInsetStart="0dp"
      app:contentInsetStart="0dp"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="@color/color_cyan"
      android:id="@+id/toolbarInMain">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
          android:id="@+id/button_open_menu"
          android:layout_centerInParent="true"
          app:srcCompat = "@drawable/ic_gamburger_menu"
          android:background="@null"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>
      </RelativeLayout>

  </Toolbar>

    <FrameLayout
      android:id="@+id/frame_fragment_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>


  </LinearLayout>

  <include
    layout="@layout/item_menu"/>

</RelativeLayout>
