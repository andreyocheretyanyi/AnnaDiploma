<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_blocks_list_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

<FrameLayout
    android:background="@drawable/item_gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_in_block_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_show_map"
        android:layout_margin="15dp"
        app:backgroundTint="@color/color_orange_pastel"
        app:rippleColor="@color/color_orange_pastel_light"
        app:srcCompat = "@drawable/ic_map"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
</LinearLayout>
